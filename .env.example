# Copy this file to .env.local and fill in your actual values

# 1. DATABASE CONNECTION
# This is the connection string for your PostgreSQL database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# 2. AUTH.JS SECRET
# A long, random string used to encrypt session data
# Generate one by running: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
AUTH_SECRET="your-secret-here"

# 3. GITHUB OAUTH CREDENTIALS
# Get these from your GitHub OAuth App settings
GITHUB_ID="your-github-app-id"
GITHUB_SECRET="your-github-secret"

# 4. GOOGLE OAUTH CREDENTIALS
# Get these from the Google Cloud Console
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-secret"

# 5. OPTIONAL: ADMIN SEEDING (for development only)
# ADMIN_EMAIL="admin@example.com"
# ADMIN_PASSWORD="securepassword"
